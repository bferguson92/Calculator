<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnMinus"
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnPlus"
        android:layout_marginStart="10dp"
        android:layout_marginTop="17dp"
        android:layout_toEndOf="@+id/btnThree"
        android:onClick="onClick"
        android:text="@string/btn_minus" />

    <Button
        android:id="@+id/btnDivide"
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnMultiple"
        android:layout_marginStart="10dp"
        android:layout_marginTop="17dp"
        android:layout_toEndOf="@+id/btnEqual"
        android:onClick="onClick"
        android:text="@string/btn_divide" />

    <Button
        android:id="@+id/btnMultiple"
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnMinus"
        android:layout_marginStart="10dp"
        android:layout_marginTop="17dp"
        android:layout_toEndOf="@+id/btnNine"
        android:onClick="onClick"
        android:text="@string/btn_multiple" />

    <TextView
        android:id="@+id/tvBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="50dp"
        android:padding="10dp"
        android:textSize="50sp" />

    <TextView
        android:id="@+id/tvBox2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tvBox"
        android:layout_marginStart="10dp"
        android:layout_marginTop="370dp"
        android:padding="10dp"
        android:textSize="50sp" />

    <Button
        android:id="@+id/btnOne"
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvBox"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="17dp"
        android:onClick="onClick"
        android:text="@string/btn_one" />

    <Button
        android:id="@+id/btnTwo"
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvBox"
        android:layout_marginStart="10dp"
        android:layout_marginTop="17dp"
        android:layout_toEndOf="@+id/btnOne"
        android:onClick="onClick"
        android:text="@string/btn_two" />

    <Button
        android:id="@+id/btnThree"
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvBox"
        android:layout_marginStart="10dp"
        android:layout_marginTop="17dp"
        android:layout_toEndOf="@+id/btnTwo"
        android:onClick="onClick"
        android:text="@string/btn_three" />

    <Button
        android:id="@+id/btnFour"
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnOne"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="17dp"
        android:onClick="onClick"
        android:text="@string/btn_four" />

    <Button
        android:id="@+id/btnPlus"
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvBox"
        android:layout_marginStart="10dp"
        android:layout_marginTop="17dp"
        android:layout_toEndOf="@+id/btnThree"
        android:onClick="onClick"
        android:text="@string/btn_plus" />

    <Button
        android:id="@+id/btnFive"
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnTwo"
        android:layout_marginStart="10dp"
        android:layout_marginTop="17dp"
        android:layout_toEndOf="@+id/btnFour"
        android:onClick="onClick"
        android:text="@string/btn_five" />


    <Button
        android:id="@+id/btnSix"
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnThree"
        android:layout_marginStart="10dp"
        android:layout_marginTop="17dp"
        android:layout_toEndOf="@+id/btnFive"
        android:onClick="onClick"
        android:text="@string/btn_six" />


    <Button
        android:id="@+id/btnEight"
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnFive"
        android:layout_marginStart="10dp"
        android:layout_marginTop="17dp"
        android:layout_toEndOf="@+id/btnSeven"
        android:onClick="onClick"
        android:text="@string/btin_eight" />

    <Button
        android:id="@+id/btnNine"
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnSix"
        android:layout_marginStart="10dp"
        android:layout_marginTop="17dp"
        android:layout_toEndOf="@+id/btnEight"
        android:onClick="onClick"
        android:text="@string/btn_nine" />

    <Button
        android:id="@+id/btnEqual"
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnNine"
        android:layout_marginStart="10dp"
        android:layout_marginTop="17dp"
        android:layout_toEndOf="@+id/btnZero"
        android:onClick="onClick"
        android:text="@string/btn_equal" />

    <Button
        android:id="@+id/btnZero"
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnEight"
        android:layout_marginStart="10dp"
        android:layout_marginTop="17dp"
        android:layout_toEndOf="@+id/btnClear"
        android:onClick="onClick"
        android:text="@string/btn_zero" />

    <Button
        android:id="@+id/btnSeven"
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnFour"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="17dp"
        android:onClick="onClick"
        android:text="@string/btn_seven" />

    <Button
        android:id="@+id/btnClear"
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnSeven"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="17dp"
        android:onClick="onClick"
        android:text="@string/btn_clear" />


